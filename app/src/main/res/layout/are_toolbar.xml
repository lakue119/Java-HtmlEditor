<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rteEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/rteFontsize1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="15dp"
            android:src="@drawable/ic_title_24px"
            android:visibility="visible"
            app:tint="@color/gray_999" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/rteBold"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/rteAlign"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:src="@drawable/ic_format_align_left_24px"
            app:tint="@color/gray_999" />

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            app:tint="@color/gray_999"
            android:id="@+id/rteInsertImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_photo_size_select_actual_24px" />

        <ImageView
            app:tint="@color/gray_999"
            android:id="@+id/rteInsertVideo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_movie_24px"
            />

        <ImageView
            app:tint="@color/gray_999"
            android:id="@+id/youtube"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/sns_black_01"/>
    </LinearLayout>
</merge>